{
  "manifest_version": 3,
  "name": "LinkedIn AI Bot Detector",
  "version": "1.0",
  "description": "Identifies AI bots on LinkedIn and adds overlay icons to their profile pictures",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "file:///*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
        "content_scripts": [
            {
                "matches": ["https://www.linkedin.com/*", "file:///*", "http://localhost/*", "http://127.0.0.1/*"],
                "js": ["logger.js", "content.js"],
                "css": ["styles.css"],
                "run_at": "document_end"
            }
        ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn AI Bot Detector"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://www.linkedin.com/*", "file:///*", "http://localhost/*", "http://127.0.0.1/*"]
    }
  ]
}
